{
  "name": "ai-helper-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace web",
    "build:web": "npm run build --workspace web",
    "lint:web": "npm run lint --workspace web",
    "dev": "npm run dev:web",
    "dev:api": "python -m uvicorn app.main:app --reload --app-dir apps/api/app",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
